<Point>:
    canvas:
        Color:
            rgb: (0.5, 0.5, 0.5)
        Ellipse:
            pos: self.pos
            size: self.width * self.size_hint_x, self.height * self.size_hint_y
            pos: self.center_x - self.width * self.size_hint_x/2, self.center_y - self.height * self.size_hint_x/2